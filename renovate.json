{
  "extends": [
    "config:base",
    "schedule:weekends"
  ],
  "rangeStrategy": "replace",
  "lockFileMaintenance": {
    "enabled": true,
    "extends": ["schedule:weekends"]
  },
  "vulnerabilityAlerts": {
    "enabled": true,
    "extends": ["schedule:weekends"]
  },
  "assignees": ["hiroaki-yamamoto"],
  "reviewers": ["hiroaki-yamamoto"],
  "groupName": "Updates",
  "automerge": true,
  "major": {
    "automerge": false,
    "groupName": "Major Updates",
    "extends": ["schedule:weekends"]
  },
  "npm": {
    "extends": ["schedule:weekends"],
    "packageRules": [
      {
        "depTypeList": ["devDependencies"],
        "packageNames": ["typescript"],
        "allowedVersions": "<3.6.0"
      }
    ]
  },
  "postUpdateOptions": ["gomodTidy", "npmDedupe"]
}
